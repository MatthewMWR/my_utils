# Hotspot credentials (required)
HOTSPOT_URL=http://192.168.1.1
HOTSPOT_USERNAME=admin
HOTSPOT_PASSWORD=your_password_here

# Scraper settings
SCRAPE_INTERVAL=15

# Grafana admin credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Cloudflare Tunnel (optional — for a stable public URL)
# Create a free named tunnel at https://dash.cloudflare.com → Zero Trust → Tunnels
# Then set both variables below. Leave commented out to use a random quick tunnel URL.
#CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token_here
#TUNNEL_CMD=tunnel --no-autoupdate run --token your_tunnel_token_here
