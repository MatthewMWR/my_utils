# Hotspot credentials (required)
HOTSPOT_URL=http://192.168.1.1
HOTSPOT_USERNAME=admin
HOTSPOT_PASSWORD=your_password_here

# Scraper settings
# Fallback poll timeout (seconds) when no model-stream update is received
SCRAPE_INTERVAL=10
# Dashboard chart window in seconds (x-axis span for quality chart)
DASHBOARD_HISTORY_SECONDS=120
# Strictly periodic process heartbeat interval (seconds)
PROCESS_HEARTBEAT_INTERVAL=5
# In-memory history window used by /history endpoint (seconds)
HISTORY_RETENTION_SECONDS=3600
# Upper bound for in-memory history points
HISTORY_MAX_POINTS=5000

# Grafana admin credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Cloudflare Tunnel (optional — for a stable public URL)
# Create a free named tunnel at https://dash.cloudflare.com → Zero Trust → Tunnels
# Then set both variables below. Leave commented out to use a random quick tunnel URL.
#CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token_here
#TUNNEL_CMD=tunnel --no-autoupdate run
